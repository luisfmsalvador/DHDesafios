<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/imgReturn_fRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/registermin"
                android:textColor="@color/colorCorBranca"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="15dp"
        tools:context=".login.view.RegistroFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nome"
                app:boxStrokeColor="@color/colorBotaoVermelho"
                app:hintTextColor="@color/colorCinzaHint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNome_fRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorCinzaHint"
                    android:inputType="text"
                    android:textColor="@color/colorPrimary"
                    app:boxStrokeColor="@color/colorBotaoVermelho" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                app:hintTextColor="@color/colorCinzaHint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEmail_fRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorCinzaHint"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                app:boxStrokeColor="@color/colorBotaoVermelho"
                app:hintTextColor="@color/colorCinzaHint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPassword_fRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorCinzaHint"
                    android:inputType="textPassword"
                    android:textColor="@color/colorPrimary"
                    app:boxStrokeColor="@color/colorBotaoVermelho" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/repeatPass"
                app:boxStrokeColor="@color/colorBotaoVermelho"
                app:hintTextColor="@color/colorCinzaHint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtRepeatPassword_fRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorCinzaHint"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorPrimary"
                    app:boxStrokeColor="@color/colorBotaoVermelho" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnLogin_fRegister"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/colorBotaoVermelho"
                    android:text="@string/register"
                    android:textColor="@color/colorCorBranca" />

            </LinearLayout>
        </LinearLayout>


    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
